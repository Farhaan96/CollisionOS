  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/hooks/block_sensitive_writes.ps1\" \"{{ .tool_input.file_path }}\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|MultiEdit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "powershell -NoProfile -ExecutionPolicy Bypass -File \"$CLAUDE_PROJECT_DIR/.claude/hooks/format_on_edit.ps1\" \"{{ .tool_input.file_path }}\""
          },

        ]
      }
    ]
  },
  "budgets": {
    "default": {
      "maxStepsPerTask": 6,
      "cooldownMsBetweenSteps": 1200,
      "maxFilesChangedPerStep": 12
    }
  },
  "ui": {
    "diffStrategy": "small-batches",
    "askBeforeLargeRefactor": true
  }
}