{
  "name": "collision-os",
  "version": "1.0.0",
  "description": "Complete Auto Body Shop Management Desktop Application",
  "main": "electron/main.js",
  "homepage": "./",
  "proxy": "http://localhost:3002",
  "scripts": {
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "dev": "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:3000 && electron .\"",
    "dev:debug": "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:3002 && electron . --inspect\"",
    "dev:ui": "npm run client",
    "dev:server": "npm run server",
    "server": "nodemon server/index.js",
    "client": "set BROWSER=none&& set PORT=3000&& set FAST_REFRESH=false&& react-scripts start",
    "build": "react-scripts build",
    "build:analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm run server\" \"npm run client\" \"wait-on http://localhost:3000 && electron .\"",
    "electron-pack": "npm run build && electron-builder",
    "test": "jest --passWithNoTests",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage --watchAll=false",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "eject": "react-scripts eject",
    "db:migrate": "node server/database/migrate.js",
    "db:seed": "node server/database/seed.js",
    "test:e2e": "node tests/run-e2e-tests.js",
    "test:smoke": "node run-tests.js smoke",
    "test:auth": "node run-tests.js auth",
    "test:dashboard": "node run-tests.js dashboard",
    "test:production": "node run-tests.js production",
    "test:parts": "node run-tests.js parts",
    "test:system": "node run-tests.js system",
    "test:playwright": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:headed": "npx playwright test --headed",
    "test:debug": "npx playwright test --debug",
    "test:e2e:smoke": "node tests/run-e2e-tests.js smoke",
    "test:e2e:workflows": "node tests/run-e2e-tests.js workflows",
    "test:e2e:auth": "node tests/run-e2e-tests.js auth",
    "test:e2e:customers": "node tests/run-e2e-tests.js customers",
    "test:e2e:jobs": "node tests/run-e2e-tests.js jobs",
    "test:comprehensive": "node tests/framework/comprehensive-test-runner.js",
    "test:comprehensive:unit": "node tests/framework/comprehensive-test-runner.js --category=unit",
    "test:comprehensive:integration": "node tests/framework/comprehensive-test-runner.js --category=integration",
    "test:comprehensive:e2e": "node tests/framework/comprehensive-test-runner.js --category=e2e",
    "test:comprehensive:performance": "node tests/framework/comprehensive-test-runner.js --category=performance",
    "test:comprehensive:security": "node tests/framework/comprehensive-test-runner.js --category=security",
    "test:comprehensive:accessibility": "node tests/framework/comprehensive-test-runner.js --category=accessibility",
    "test:bms-workflow": "npx playwright test tests/e2e/comprehensive-bms-workflow.spec.js --reporter=html",
    "test:performance": "npx artillery run tests/performance/enterprise-load-testing.yml",
    "test:security": "npx playwright test tests/security/comprehensive-security-tests.spec.js --reporter=html",
    "test:accessibility": "npx playwright test tests/accessibility/comprehensive-accessibility.spec.js --reporter=html",
    "test:production-ready": "npm run test:comprehensive && npm run test:bms-workflow && npm run test:security && npm run test:accessibility",
    "test:bms-comprehensive": "node tests/run-bms-comprehensive-tests.js",
    "test:bms-api": "npm test -- tests/integration/bms-customer-api.test.js",
    "test:bms-unit": "npm test -- tests/unit/bms-upload-workflow.test.js",
    "test:bms-e2e": "npx playwright test tests/e2e/bms-upload-comprehensive.spec.js",
    "test:bms-verify": "npx playwright test tests/e2e/bms-upload-verification.spec.js",
    "test:bms-all": "npm run test:bms-unit && npm run test:bms-api && npm run test:bms-e2e",
    "test:phase1": "node scripts/run-phase1-tests.js",
    "test:phase1-quick": "npx playwright test tests/e2e/phase1-workflow-validation.spec.js --reporter=list",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier -w ."
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "@mui/icons-material": "^7.3.1",
    "@mui/lab": "^7.0.0-beta.16",
    "@mui/material": "^7.3.1",
    "@mui/x-data-grid": "^8.12.1",
    "@mui/x-date-pickers": "^8.12.0",
    "@stripe/react-stripe-js": "^5.2.0",
    "@stripe/stripe-js": "^8.0.0",
    "@tanstack/react-virtual": "^3.13.12",
    "axios": "^1.6.2",
    "bcrypt": "^6.0.0",
    "chalk": "^5.6.0",
    "chart.js": "^4.5.0",
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.18",
    "decimal.js": "^10.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.0.1",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "fast-xml-parser": "^5.2.5",
    "form-data": "^4.0.4",
    "framer-motion": "^10.16.16",
    "helmet": "^8.1.0",
    "intuit-oauth": "^4.2.1",
    "joi": "^18.0.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "re-resizable": "^6.11.2",
    "react": "^18.2.0",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^6.0.0",
    "react-hot-toast": "^2.4.1",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "react-signature-canvas": "^1.1.0-alpha.2",
    "recharts": "^3.1.2",
    "sequelize": "^6.35.1",
    "session-file-store": "^1.5.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "sqlite3": "^5.1.6",
    "stripe": "^19.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "xss": "^1.0.15",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.23.0",
    "@babel/preset-typescript": "^7.27.1",
    "@faker-js/faker": "^10.0.0",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^24.3.0",
    "artillery": "^2.0.24",
    "babel-jest": "^29.7.0",
    "better-sqlite3": "^12.4.1",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^27.3.11",
    "electron-builder": "^24.6.4",
    "eslint": "^8.55.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-watch-typeahead": "^2.2.2",
    "nodemon": "^3.1.10",
    "playwright": "^1.55.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^4.9.5",
    "wait-on": "^7.2.0",
    "web-vitals": "^2.1.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.collisionos.app",
    "productName": "CollisionOS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "server/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
