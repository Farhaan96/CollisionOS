{
  "name": "collision-os",
  "version": "2.0.0",
  "description": "Specialized Insurance Collision Repair Management System",
  "private": true,
  "workspaces": [
    "app-desktop",
    "api",
    "scripts"
  ],
  "scripts": {
    "dev:electron": "cd app-desktop && npm run electron-dev",
    "dev:functions": "cd supabase && supabase functions serve",
    "dev:api": "cd api && npm run dev",
    "dev:all": "concurrently \"npm run dev:api\" \"npm run dev:functions\" \"npm run dev:electron\"",
    "db:gen": "cd scripts && npm run db-gen",
    "db:migrate": "cd supabase && supabase db push",
    "db:seed": "cd scripts && npm run db-seed",
    "seed:bms": "cd scripts && npm run seed-bms",
    "test:bms": "cd scripts && npm run test-bms",
    "test:po": "cd scripts && npm run test-po",
    "test:performance": "cd scripts && npm run test-performance",
    "build:electron": "cd app-desktop && npm run build && npm run electron-pack",
    "build:api": "cd api && npm run build",
    "start:prod": "concurrently \"npm run start:api\" \"npm run start:electron\"",
    "start:api": "cd api && npm start",
    "start:electron": "cd app-desktop && npm run electron"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "lerna": "^7.4.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/collision-os.git"
  },
  "keywords": [
    "collision-repair",
    "auto-body-shop",
    "insurance",
    "bms",
    "purchase-orders",
    "repair-orders",
    "parts-management"
  ],
  "author": "CollisionOS Team",
  "license": "MIT"
}