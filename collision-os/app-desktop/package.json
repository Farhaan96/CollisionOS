{
  "name": "@collision-os/app-desktop",
  "version": "2.0.0",
  "description": "Collision Repair Desktop Application - Electron + React",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && npm run start:electron\"",
    "start:react": "BROWSER=none PORT=3000 react-scripts start",
    "start:electron": "electron .",
    "electron-dev": "concurrently \"npm run start:react\" \"wait-on http://localhost:3000 && electron . --inspect\"",
    "build": "react-scripts build",
    "electron-pack": "npm run build && electron-builder",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:collision": "react-scripts test --testPathPattern=collision-repair",
    "test:bms": "react-scripts test --testPathPattern=bms",
    "test:po": "react-scripts test --testPathPattern=purchase-orders",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.56.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/material": "^7.3.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/x-data-grid": "^8.10.2",
    "@mui/x-date-pickers": "^8.10.2",
    "axios": "^1.6.2",
    "dayjs": "^1.11.13",
    "fast-xml-parser": "^5.2.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "react-scripts": "5.0.1",
    "react-hot-toast": "^2.4.1",
    "zustand": "^4.4.7",
    "electron-is-dev": "^2.0.0",
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/node": "^24.3.0",
    "concurrently": "^8.2.2",
    "electron": "^27.1.3",
    "electron-builder": "^24.6.4",
    "typescript": "^5.3.0",
    "wait-on": "^7.2.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.collision-os.desktop",
    "productName": "Collision Repair OS",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
